<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".RouteActivity">
    android:stretchColumns="1"> <!-- stretch the second column of the layout-->

    <!-- first row of the table layout-->
    <TableRow

        android:id="@+id/firstRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- first element of the row-->
        <Button
            android:id="@+id/navigateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="נווט לתחנה"
            android:padding="18dip"
        />

        <TextView
            android:id="@+id/srcStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:textAlignment="center"
            android:text="לך אל תחנה "
            android:textColor="#000"
            android:textSize="12dp" />


    </TableRow>

    <TableRow
        android:id="@+id/secondRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timeShuttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="השאטל יגיע בעוד"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="12dp" />

<!--        android:layout_span="2"-->
<!--        android:layout_weight="1"-->

    </TableRow>

    <TableRow
    android:id="@+id/ThirdRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/targetStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dip"
        android:text="סע עד תחנה "
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="12dp" />
    <!--        android:layout_span="2"-->
    <!--        android:layout_weight="1"-->


    </TableRow>

    <TableRow
        android:id="@+id/fourthRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/navigateBuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="נווט לבניין"
            android:padding="18dip"
            />

        <TextView
            android:id="@+id/targetBuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="לך אל בניין"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="12dp" />




    </TableRow>


</TableLayout>